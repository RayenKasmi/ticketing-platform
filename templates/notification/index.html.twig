{% extends 'base.html.twig' %}

{% block title %}Notifications{% endblock %}


{% block body %}
    <style>
        .new {
            border:2px solid;
            border-color: #f75c7d ;

        }
    </style>
    <div class="container-fluid">
        <div class="container py-5">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Notifications</h2>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th style="width:3%"></th>
                            <th style="width:10%">Sender</th>
                            <th>Content</th>
                            <th style="width:3%">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for notification in notifications %}
                            <tr>
                                <td>
                                    <i class="{% if not notification.isRead %}bi bi-circle-fill{% endif %}" style="color:#f75c7d;margin:15px"></i>
                                </td>
                                <td>
                                    <a href="{{ path('mark_notification_read', {'id': notification.id}) }}">
                                        <span class="notification-sender">{{ notification.sender }}</span>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('mark_notification_read', {'id': notification.id}) }}">
                                        <span class="notification-content">{{ notification.content }}</span>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('delete_notification', {'id': notification.id}) }}" class="notificationDelete" data-id="{{ notification.id }}"><i class="bi bi-x" style="color:#f75c7d "></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
{% endblock %}
