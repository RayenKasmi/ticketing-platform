{% extends 'base.html.twig' %}

{% block title %}Ticket Management{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 150px">
        <div class="container py-5">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Tickets</h2>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Event</th>
                            <th>Buyer</th>
                            <th>Holder Name</th>
                            <th>Holder Number</th>
                            <th>Price</th>
                            <th>Purchase Date</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ticket in tickets %}
                            <tr>
                                <td>{{ ticket.id }}</td>
                                <td>{{ ticket.event }}</td>
                                <td>{{ ticket.buyer }}</td>
                                <td>{{ ticket.getHolderNumber() }}</td>
                                <td>{{ ticket.holderNumber }}</td>
                                <td>{{ ticket.price }}</td>
                                <td>{{ ticket.purchaseDate |  date('d-m-Y') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {#<nav aria-label="page_nav" class="d-flex justify-content-center">
                <ul class="pagination d-inline-flex justify-content-between">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_all_tickets_board', {'page': currentPage - 1}) }}">Previous</a>
                        </li>
                    {% endif %}
                    {% if totalPages != 0 %}
                        {% for i in range(1, totalPages + 1) %}
                            <li class="page-item {% if currentPage == i %}active{% endif %}">
                                <a class="page-link" href="{{ path('app_all_tickets_board', {'page': i}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                    {% endif %}
                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_all_tickets_board', {'page': currentPage + 1}) }}">Next</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>#}
        </div>
    </div>
{% endblock %}
