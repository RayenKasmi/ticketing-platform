{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div style="margin-top: 20vh;"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

                        {{ form_start(registrationForm) }}
                        <div class="form-group">
                            {% if registrationForm.firstname.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in registrationForm.firstname.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                            {{ form_label(registrationForm.firstname, 'First Name', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {% if registrationForm.lastname.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in registrationForm.lastname.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                            {{ form_label(registrationForm.lastname, 'Last Name', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {% if registrationForm.email.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in registrationForm.email.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in registrationForm.plainPassword.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}, 'label': 'Password'}) }}
                        </div>
                        <div style="margin-top: 1vh;"></div>
                        <button type="submit" class="btn btn-secondary btn-block">Register</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="margin-top: 7vh;"></div>
{% endblock %}
