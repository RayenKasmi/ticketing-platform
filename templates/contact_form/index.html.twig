{% extends 'base.html.twig' %}

{% block title %}Contact us!{% endblock %}
{% block body %}
    <div class="container-fluid page-header py-5" style="background-color:#293049">
        <h1 class="text-center text-white display-6">Contact us</h1>
    </div>

    <div class="container-fluid contact py-5">
        <div class="container py-5">
            <div class="p-5 bg-light rounded">
                <div class="row g-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <div class="col-lg-7">
                        {{ form_start(contactForm) }}
                        <div class="form-group">
                            {{ form_label(contactForm.firstname, 'First Name', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(contactForm.firstname, {'attr': {'class': 'form-control'}}) }}
                            {% if contactForm.firstname.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in contactForm.firstname.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(contactForm.lastname, 'Last Name', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(contactForm.lastname, {'attr': {'class': 'form-control'}}) }}
                            {% if contactForm.lastname.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in contactForm.lastname.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(contactForm.subject, 'Subject', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(contactForm.subject, {'attr': {'class': 'form-control'}}) }}
                            {% if contactForm.subject.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in contactForm.subject.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(contactForm.message, 'Message', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(contactForm.message, {'attr': {'class': 'form-control'}, 'label': 'Password'}) }}
                            {% if contactForm.message.vars.errors|length > 0 %}
                                <p class="text-danger">
                                    {% for error in contactForm.message.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                        <div style="margin-top: 1vh;"></div>
                        <button type="submit" class="btn btn-secondary btn-block">Submit Form</button>
                        {{ form_end(contactForm) }}
                    </div>
                    <div class="col-lg-5">
                        <div class="d-flex p-4 rounded mb-4 bg-white">
                            <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                            <div>
                                <h4>Address</h4>
                                <p class="mb-2">676 Centre Urbain Nord BP, Tunis 1080</p>
                            </div>
                        </div>
                        <div class="d-flex p-4 rounded mb-4 bg-white">
                            <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                            <div>
                                <h4>Mail Us</h4>
                                <p class="mb-2">tickety@gmail.com</p>
                            </div>
                        </div>
                        <div class="d-flex p-4 rounded bg-white">
                            <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                            <div>
                                <h4>Telephone</h4>
                                <p class="mb-2">(+216) 56 354 698</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
