{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="container" id="profileContainer">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <nav class="nav">
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-profileInfo-tab" data-bs-toggle="tab"
                            data-bs-target="#nav-profileInfo" type="button" role="tab" aria-controls="nav-profileInfo"
                            aria-selected="true">Profile
                    </button>
                </div>
            </nav>
            <div class="tab-content py-3" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-profileInfo" role="tabpanel"
                     aria-labelledby="nav-profileInfo-tab">
                    <div class="form-group row">
                        <label for="firstname" class="col-sm-3 col-form-label">First Name</label>
                        <div class="col-sm-9 inputBox">
                            <input name="firstname" type="text" readonly class="form-control" id="firstname"
                                   value={{ app.user.firstname }}>
                            <small id="newFirstnameError"></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastname" class="col-sm-3 col-form-label">Last Name</label>
                        <div class="col-sm-9 inputBox">
                            <input name="lastname" type="text" readonly class="form-control" id="lastname"
                                   value= {{ app.user.lastname }}>
                            <small id="newLastnameError"></small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9 inputBox">
                            <input name="email" type="text" readonly class="form-control" id="email"
                                   value= {{ app.user.email }}>
                            <small id="newEmailError"></small>
                        </div>
                    </div>
                    <button type="button" name="ChangeName" class="btn btn-primary" id="changeName">
                        <a style="color: white;" href = /profile/change-account-info> Change Name </a>
                    </button>

                    <button type="button" name="ChangePassword" class="btn btn-primary" id="changePassword">
                        <a style="color: white;" href = /profile/change-password> Change Password </a>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
